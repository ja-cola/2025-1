#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int secret, guess, attempts = 0;
    
    // 난수 초기화
    srand(time(0)); 
    secret = rand() % 100 + 1; // 1~100 사이의 숫자

    printf("=== 숫자 맞추기 게임 (1~100) ===\n");

    do {
        printf("숫자를 입력하세요: ");
        scanf("%d", &guess);
        attempts++;

        if (guess > secret) {
            printf("Down! 더 작은 숫자입니다.\n");
        } else if (guess < secret) {
            printf("Up! 더 큰 숫자입니다.\n");
        } else {
            printf("정답입니다! %d번 만에 맞췄습니다.\n", attempts);
        }
    } while (guess != secret);

    return 0;
}
