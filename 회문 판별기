#include <stdio.h>
#include <string.h>

int isPalindrome(char str[]) {
    int left = 0;
    int right = strlen(str) - 1;

    while (left < right) {
        if (str[left] != str[right]) {
            return 0; // 회문이 아님
        }
        left++;
        right--;
    }
    return 1; // 회문임
}

int main() {
    char word[100];

    printf("=== 회문(Palindrome) 판별기 ===\n");
    printf("단어를 입력하세요: ");
    scanf("%s", word);

    if (isPalindrome(word)) {
        printf("'%s'은(는) 회문입니다.\n", word);
    } else {
        printf("'%s'은(는) 회문이 아닙니다.\n", word);
    }

    return 0;
}
